{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["*"],
      "@/layout": ["client/app/layout/Layout"],
      "@/styles": ["client/resources/styles/styles.scss"],
      "@/ui": ["client/app/components/UI/index.ts"],
      "@/components": ["client/app/components/index.ts"],
      "@/utils/*": ["client/utils/*"],
      "@/constants/*": ["client/constants/*"],
      "@/resources/*": ["client/resources/*"],
      "@/public/*": ["../public/*"],
      "@/render/public/*": ["client/app/public/*"],
      "@/render/private/*": ["client/app/private/*"],
      "@/services/*": ["client/services/*"],
      "@/hooks/*": ["client/hooks/*"],
      "@/store/*": ["client/store/*"],
      "@/context/*": ["client/context/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
